<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="KoreanFlashCards.MainPage">
    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Korean Flashcards" HorizontalOptions="StartAndExpand"/>
        <Entry x:Name="englishInput" Placeholder="Input English Here" HorizontalOptions="Center" VerticalOptions="Fill"/>
        <Entry x:Name="koreanInput" Placeholder="Input Korean Here" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Text="Submit" HorizontalOptions="Center" VerticalOptions="Center" Clicked="Button_Clicked"/>
        <Label Text="" x:Name="englishLabel" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        <Label Text="" x:Name="koreanLabel" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        <Button Text="Quiz Page" HorizontalOptions="Center" VerticalOptions="Center" Clicked="Navigate_To_QuizPage"/>
        <Button Text="Flashcard Page" HorizontalOptions="Center" VerticalOptions="Center" Clicked="Navigate_To_FlashcardPage"/>

    </StackLayout>
</ContentPage>