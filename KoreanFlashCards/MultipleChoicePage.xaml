<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="KoreanFlashCards.MultipleChoicePage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Text" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="SpaceEvenly">
            <Button x:Name="button1" Text="Button 1" Clicked="Button_Clicked" />
            <Button x:Name="button2" Text="Button 2" Clicked="Button_Clicked" />
            <Button x:Name="button3" Text="Button 3" Clicked="Button_Clicked" />
            <Button x:Name="button4" Text="Button 4" Clicked="Button_Clicked" />
        </FlexLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
